<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>{{meta_title}}</title>

	<meta name="HandheldFriendly" content="True" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<link rel="stylesheet" type="text/css" href="{{asset "css/style.css"}}" />
	<link rel="stylesheet" media="all" href="{{asset "css/han.min.css"}}">
	<link rel="stylesheet" media="all" href="{{asset "css/gitalk.css"}}">

	{{ghost_head}}
</head>

<body class="{{body_class}}">

	<div class="nav-header">
		<nav class="nav-wrapper">
				{{#if @site.logo}}
				<span class="logo">
					<a href="{{@site.url}}" title="{{t "Home"}}"><img src="{{@site.logo}}" alt="{{t "Logo"}}" /></a>
				</span>
				{{/if}}
				{{navigation}}
				<ul class="nav-side">
					{{#if @site.secondary_navigation}}
					{{navigation type="secondary"}}
					{{/if}}
					{{#if @labs.subscribers}}
					<li class="nav-subscribe"><a title="Subscribe" href="{{@site.url}}/subscribe/" target="_blank"><i class="icon icon-mail"></i><span>{{t "Subscribe"}}</span></a></li>
					{{/if}}
					<li class="nav-rss"><a title="RSS" href="{{@site.url}}/rss/" target="_blank"><i class="icon icon-rss"></i><span>RSS</span></a></li>
				</ul>
		</nav>

		<div class="nav-wrapper-control">
			<div class="inner">
				<a class="nav-menu"><i class="icon icon-menu"></i>{{t "Menu"}}</a>
			</div>
		</div>
	</div>
	<div class="nav-close"></div>

	<section class="page-wrapper han-init-context">

		{{{body}}}

		<div class="nav-footer">
			<nav class="nav-wrapper">
				<span class="nav-copy">{{@site.title}} &copy; {{date format='YYYY'}}</span>
				<span class="nav-credits">{{t "Published with"}} <a href="https://ghost.org" target="_blank">Ghost</a> &bull; {{t "Theme" }} <a href="https://github.com/zoomyale/akira" target="_blank">Akira</a></span>
			</nav>
		</div>

	</section>

	{{!-- Load basic scripts --}}
	<script type="text/javascript" src="{{asset "js/script.js"}}"></script>

	{{!-- Load scripts from other template files --}}
	{{{block "scripts"}}}

	{{ghost_foot}}

</body>
</html>
